                                            <GradientStop Color="White" Offset="0"/>
                                            <GradientStop Color="#FFC7DBEC" Offset="1"/>
                                            <GradientStop Color="#FFD7EAF8" Offset="0.492"/>
                                            <GradientStop Color="#FFA6C0D6" Offset="0.511"/>
